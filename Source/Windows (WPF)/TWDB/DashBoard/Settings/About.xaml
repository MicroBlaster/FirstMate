<Window x:Class="DashBoard.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" AllowsTransparency="True"  Background="Transparent"
        Title="Splash" Height="300" Width="450" >

    <Grid>
        <Grid Background="#FF303030" Margin="30" MouseDown="Grid_MouseDown">
            <Grid.BitmapEffect>
                <DropShadowBitmapEffect Color="Gray" ShadowDepth="8" Softness="1" Opacity=".5"/>
            </Grid.BitmapEffect>

            <Image Name="AboutImage" Margin="0,10,0,0" Height="34" VerticalAlignment="Top" Source="/DashBoard;component/Images/about.png" Opacity="1"/>
            <TextBlock Name="aboutTextBlock" Foreground="#60FFFFFF" HorizontalAlignment="Left" Margin="50,49,0,0" Width="300" Height="151" VerticalAlignment="Top" />
            <Button Content="Ok" Height="23" Margin="0,0,12,12" Opacity=".5"
                    HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" 
                    Click="onOkClick"/>
            <Border Name="innerBorder" BorderThickness="4" BorderBrush="#FF404040" />
            <Border Name="outerBorder" BorderThickness="2" Margin="2" BorderBrush="#FF4F4F4F" />
        </Grid>
    </Grid>
</Window>
